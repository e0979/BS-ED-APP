<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:background="#a4a4a4">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:id="@+id/resultado"
            android:layout_alignParentTop="true"
            android:background="@drawable/barra_resultado"
            android:textSize="60dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="C"
            android:id="@+id/botonC"
            android:layout_below="@+id/resultado"
            android:layout_alignParentStart="true"
            android:background="@drawable/boton_gris"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/boton7"
            android:layout_below="@+id/botonC"
            android:layout_alignStart="@+id/botonC"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_gris" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/boton8"
            android:layout_alignTop="@+id/boton7"
            android:layout_centerHorizontal="true"
            android:background="@drawable/boton_gris" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="9"
            android:id="@+id/boton9"
            android:background="@drawable/boton_gris"
            android:paddingLeft="7dp"
            android:layout_below="@+id/botonC"
            android:layout_alignStart="@+id/boton6" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/boton4"
            android:layout_below="@+id/boton7"
            android:layout_alignStart="@+id/boton7"
            android:background="@drawable/boton_gris" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="1"
            android:id="@+id/boton1"
            android:layout_below="@+id/boton4"
            android:onClick="@string/hello_world"
            android:background="@drawable/boton_gris"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignStart="@+id/boton4"
            android:layout_toStartOf="@+id/opciones"
            android:layout_alignEnd="@+id/boton4"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="0"
            android:id="@+id/boton0"
            android:layout_below="@+id/boton1"
            android:layout_alignStart="@+id/boton1"
            android:background="@drawable/boton_gris" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/boton5"
            android:layout_below="@+id/boton8"
            android:layout_alignStart="@+id/boton8"
            android:background="@drawable/boton_gris"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/boton6"
            android:layout_alignBottom="@+id/boton5"
            android:layout_alignStart="@+id/boton9"
            android:background="@drawable/boton_gris"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="2"
            android:id="@+id/boton2"
            android:layout_below="@+id/boton4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/boton_gris"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="3"
            android:id="@+id/boton3"
            android:layout_alignTop="@+id/boton2"
            android:layout_alignStart="@+id/boton6"
            android:background="@drawable/boton_gris"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text=","
            android:id="@+id/botoncoma"
            android:layout_alignBottom="@+id/boton0"
            android:layout_alignStart="@+id/boton2"
            android:background="@drawable/boton_gris"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Calcular"
            android:id="@+id/botoncalcular"
            android:layout_alignBottom="@+id/botoncoma"
            android:layout_alignStart="@+id/boton3"
            android:background="@drawable/boton_nar_mdpi" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/opciones"
            android:layout_alignTop="@+id/botonC"
            android:layout_above="@+id/boton8"
            android:layout_toEndOf="@+id/botonC" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_marginRight="299dp" />
</RelativeLayout>
